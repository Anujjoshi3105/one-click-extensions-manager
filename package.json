{
  "private": true,
  "dependencies": {},
  "devDependencies": {
    "dot-json": "^1.2.0",
    "npm-run-all": "^4.1.5",
    "stylelint": "^13.3.2",
    "stylelint-config-xo": "^0.16.1",
    "utc-version": "^2.0.1",
    "web-ext": "^4.1.0",
    "xo": "^0.28.0"
  },
  "scripts": {
    "fix": "run-p 'lint:* -- --fix'",
    "lint": "run-p lint:*",
    "lint:css": "stylelint 'src/*.css'",
    "lint:js": "xo",
    "test": "run-p 'lint:*' build",
    "build": "npm run update-version && npm run zip",
    "update-version": "VERSION=$(utc-version); echo $VERSION; dot-json src/manifest.json version $VERSION",
    "zip": "web-ext build --source-dir src --artifacts-dir dist"
  },
  "xo": {
    "envs": [
      "webextensions",
      "browser",
      "jquery"
    ],
    "ignores": [
      "dist",
      "src/lib/jquery*"
    ],
    "rules": {
      "unicorn/string-content": "off",
      "indent": [
        "error",
        "tab",
        {
          "ignoredNodes": [
            "TemplateLiteral > *"
          ]
        }
      ]
    }
  },
  "stylelint": {
    "extends": "stylelint-config-xo",
    "rules": {
      "no-duplicate-selectors": null,
      "selector-id-pattern": null,
      "selector-class-pattern": null,
      "no-descending-specificity": null,
      "function-url-quotes": null
    }
  }
}
