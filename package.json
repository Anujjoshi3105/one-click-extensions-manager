{
  "name": "one-click-extensions-manager",
  "version": "1.0.0",
  "description": "View, enable, disable, remove your extensions with ease.",
  "main": "popup.js",
  "dependencies": {},
  "devDependencies": {
    "gulp": "^3.9.1",
    "gulp-clean": "^0.3.2",
    "gulp-debug": "^3.1.0",
    "gulp-string-replace": "^0.4.0",
    "gulp-zip": "^4.0.0",
    "xo": "^0.18.2"
  },
  "scripts": {
    "test": "xo",
    "fix": "xo --fix",
    "build": "gulp build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/HangYang/one-click-extensions-manager.git"
  },
  "keywords": [
    "chrome",
    "extension",
    "webextension"
  ],
  "author": "Hank Yang, Federico Brigante",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/HangYang/one-click-extensions-manager/issues"
  },
  "homepage": "https://github.com/HangYang/one-click-extensions-manager#readme",
  "xo": {
    "envs": [
      "webextensions",
      "browser",
      "jquery"
    ],
    "rules": {
      "import/no-unassigned-import": 0,
      "no-unused-vars": [
        2,
        {
          "varsIgnorePattern": "^h$"
        }
      ]
    },
    "ignores": [
      "deploy/**",
      "gulpfile.js",
      "src/lib/jquery*"
    ],
    "globals": [
      "browser"
    ]
  }
}
