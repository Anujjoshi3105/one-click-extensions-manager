{
	"private": true,
	"scripts": {
		"build": "rollup --config",
		"fix": "run-p 'lint:* -- --fix'",
		"lint": "run-p lint:*",
		"lint:css": "stylelint 'source/*.css'",
		"lint:js": "eslint source",
		"release": "run-s version zip",
		"test": "run-p 'lint:*' build",
		"version": "VERSION=$(utc-version); echo $VERSION; dot-json distribution/manifest.json version $VERSION",
		"watch": "rollup --config --watch",
		"zip": "web-ext build --source-dir distribution"
	},
	"eslintConfig": {
		"env": {
			"browser": true,
			"jquery": true,
			"webextensions": true
		},
		"plugins": [
			"unicorn"
		],
		"extends": [
			"xo/browser",
			"plugin:unicorn/recommended"
		],
		"rules": {
			"indent": [
				"error",
				"tab",
				{
					"ignoredNodes": [
						"TemplateLiteral > *"
					]
				}
			]
		}
	},
	"stylelint": {
		"extends": "stylelint-config-xo",
		"rules": {
			"no-duplicate-selectors": null,
			"selector-id-pattern": null,
			"selector-class-pattern": null,
			"no-descending-specificity": null,
			"function-url-quotes": null
		}
	},
	"dependencies": {
		"jquery": "^3.5.0"
	},
	"devDependencies": {
		"dot-json": "^1.2.0",
		"eslint": "^6.8.0",
		"npm-run-all": "^4.1.5",
		"rollup": "^2.6.1",
		"rollup-plugin-copy-glob": "^0.3.1",
		"rollup-plugin-livereload": "^1.2.0",
		"stylelint": "^13.3.2",
		"stylelint-config-xo": "^0.16.1",
		"utc-version": "^2.0.1",
		"web-ext": "^4.1.0",
		"xo": "^0.29.1"
	}
}
